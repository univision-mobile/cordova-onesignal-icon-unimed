<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-onesignal-icon-unimed"
        version="1.0.0">

    <name>Cordova Onesignal Copy Icons</name>

    <description>
      This is an unofficial plugin to copy all Onesignal`s icons to Android resources.
    </description>

    <repo>https://github.com/univision-mobile/cordova-onesignal-icon-unimed</repo>

    <license>Apache 2.0</license>

    <engines>
        <engine name="cordova-android" version=">=3.5.0" />
    </engines>

    <platform name="android">
        <source-file src="res/android/drawable-hdpi/ic_stat_onesignal_default.png" target-dir="res/drawable-hdpi" />
        <source-file src="res/android/drawable-mdpi/ic_stat_onesignal_default.png" target-dir="res/drawable-mdpi" />
        <source-file src="res/android/drawable-xhdpi/ic_stat_onesignal_default.png" target-dir="res/drawable-xhdpi" />
        <source-file src="res/android/drawable-xxhdpi/ic_stat_onesignal_default.png" target-dir="res/drawable-xxhdpi" />
        <source-file src="res/android/drawable-xxxhdpi/ic_stat_onesignal_default.png" target-dir="res/drawable-xxxhdpi" />
    </platform>
</plugin>
